{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Hugo: Serve Development Site",
      "type": "shell",
      "command": "./scripts/dev.sh",
      "args": ["serve"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Watching for changes.*$",
          "endsPattern": "^.*Web Server is available at.*$"
        }
      }
    },
    {
      "label": "Hugo: Build Site",
      "type": "shell",
      "command": "./scripts/dev.sh",
      "args": ["build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Hugo: Clean Generated Files",
      "type": "shell",
      "command": "./scripts/dev.sh",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Hugo: Test Theme",
      "type": "shell",
      "command": "./scripts/dev.sh",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Testing theme.*$",
          "endsPattern": "^.*Web Server is available at.*$"
        }
      }
    }
  ]
}
